.area{
	padding: 0 10px;
	height: 50px;
	background: #fff;
	border-bottom: 1px solid #ccc;
	vertical-align: middle;
	font-size: 14px;
}
.areaTitle{
	display: block;
	float: left;
	width: 100px;
	line-height: 50px;
	color: #9e9e9e;
}
.areaInfo{
	overflow:hidden;
	margin-left: 100px;
	height: 50px;
	line-height: 50px;
	color: #9e9e9e;
	white-space:nowrap;
	text-overflow:ellipsis;
}
.placeholder{
	color: #9e9e9e;
}
.btn{
	margin: 10px 10px 0 10px;
	height: 40px;
